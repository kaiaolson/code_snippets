<%= form_for(@code_snippet) do |f| %>
  <% if @code_snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@code_snippet.errors.count, "error") %> prohibited this code_snippet from being saved:</h2>

      <ul>
      <% @code_snippet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :language_id %><br>
    <%= f.collection_select(:language_id, Language.order("name"), :id, :name, class: "form-control")  %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="checkbox">
      <label for="privacy">
        <%= f.check_box :privacy%>
        <strong>Private?</strong>
      </label>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
