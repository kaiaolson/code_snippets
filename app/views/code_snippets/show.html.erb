<p>
  <strong>Language:</strong>
  <%= @code_snippet.language_name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @code_snippet.title %>
</p>

<p>
  <strong>Created By:</strong>
  <%= @code_snippet.user_full_name %>
</p>

<p>
  <strong>Body:</strong>
  <%= markdown(@code_snippet.body) %>
</p>

<p id="raw-body" style="display:none;">
  <%= @code_snippet.body %>
</p>
<%= link_to "Show Raw", code_snippet_path(@code_snippet), class: "btn btn-default navbar-btn signup show-raw" %>
<br>
<div class="btn-group">
  <% if can? :edit, @code_snippet %>
    <%= link_to 'Edit', edit_code_snippet_path(@code_snippet), class: "btn btn-warning" %>
  <% end %>
  <% if can? :destroy, @code_snippet %>
    <%= link_to "Delete", code_snippet_path(@code_snippet), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this snippet?"} %>
  <% end %>
  <%= link_to 'Back', code_snippets_path, class: "btn btn-primary" %>
</div>

<script>
  $('.show-raw').on('click', function(event){
    event.preventDefault();
    $('#raw-body').toggle();
    $('.show-raw').html($('.show-raw').text() == 'Show Raw' ? 'Hide Raw' : 'Show Raw');
  });
</script>
